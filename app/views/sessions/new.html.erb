<% provide(:title, "Login") %>

<div class="container-fluid">
  <div class="row login-bg">
    <div class="col-lg-12">
      <div class="login-container">
        <div class="login-header text-center"><span class="vet">Vet</span><span class="rounds">rounds</span></div>
        <%= form_for :session, url: loginpost_path, html: {class: "login-form"} do |f| %>
          <div class="form-group">
            <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox"> Remember me
            </label>
            <span class="text-right pull-right"><a href="<%= password_forgot_path %>">Forgot password ?</a></span>
          </div>
          <div class="form-group text-center">
            <button class="btn btn-primary">Login</button>
          </div>
        <% end %>
        <div class="signup-container text-center">
          <span>Don't have a account yet?</span>&nbsp;<a href="<%= signup_url %>">Sign up now</a>
        </div>
      </div>
    </div>
  </div>
</div>
