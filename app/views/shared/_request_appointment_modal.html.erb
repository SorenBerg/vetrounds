<div class="modal fade" id="appt-request-modal-<%= answer_id %>" tabindex="-1" role="dialog" aria-labelledby="appt-request-modal-label-<%= answer_id %>" aria-hidden="true">
  <div class="modal-dialog">
    <%= form_tag user_request_appointment_path, :method => :post do %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="appt-request-modal-label-<%= answer_id %>">Request an appointment</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= text_area_tag :request, "When do you want an appointment?", class: "form-control" %>
          </div>
        </div>
        <%= hidden_field_tag :from_id, current_user ? current_user.id : "" %>
        <%= hidden_field_tag :to_id, vet_id %>
        <%= hidden_field_tag :answer_id, answer_id %>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Send Request</button>
        </div>
      </div>
    <% end %>
  </div>
</div>