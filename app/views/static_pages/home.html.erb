<div id="top-vets" class="container-fluid">
  <div class="row-fluid">
    <h2>Top Vets</h2>
  </div>
  <div class="row-fluid">
    <div class="col-sm-1"></div>
    <% (1..5).each do |i| %>
      <div class="col-sm-2 center-block">

        <div class="avatarV2 medium" style="<%= "background-image: url(#{@top5[i].avatar_url(:vet_face)})" %>" >
        </div>

        <div class="top-vet-label">
          
          <%= image_tag "textvetred.png" %> Dr. <%= @top5[i].name %>
          
          <div> <%= "#{@top5[i].detail.area_of_practice}" %></div>
          <p class="expert-polis">
            <span class="polis top-vet-label"><%= @top5[i].detail.zipcode %></span>
          </p>
        </div>
      </div>
    <% end %>
