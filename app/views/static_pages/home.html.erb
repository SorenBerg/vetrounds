  <div class="container">
    <!--<div id="home-bg"></div>-->

    <div id="vet-client-buttons" class="splash-header">

      <div class="row i-am-tag">
        <h2>I am a...</h2>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <div class="row splash-item" id="client-button">
            <button class="btn btn-success btn-xlg"> <%= image_tag "paw.png" %> Pet Owner </button> 
          </div>
        </div>
        <div class="col-sm-4 col-sm-offset-4">
          <div class="row splash-item" id="vet-button">
            <button class="btn btn-success btn-xlg"> <%= image_tag "tinyvet.png" %> Veterinary Expert </button>
          </div>
        </div>
      </div>
    </div>

    

    <div id="hidden-content">
      <!-- Client content -->
      
      <div id="client-content" class="row">
        <div class="col-sm-8 col-sm-offset-4">
          
          <div class="row tag-line">
                        
            <h2>Client tag line</h2>
            <h2>Another Tag line right here</h2>
            
          </div>
        </div>
        <div class="col-sm-8 col-sm-offset-2 question-box">
          <%= form_tag(controller: "questions", action: "newpost") do %>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Ask your question for free right here..." name="question">
            </div>
          
            <div class="form-group" style="text-align: center;">
          
              <button type="submit" class="btn btn-success btn-xlg">Ask Question</button>
        
            </div>
          </form>
        <% end %>
        </div>
        <%= render partial: "shared/active_content_carousel", :locals => { :active_content=> @active_content, :carousel_id => 1 } %>
      </div>

      <!-- Vet content -->
      <div id="vet-content">
        <div class="row">
          

          <div class="col-sm-8 col-sm-offset-4">
        
            <div class="row tag-line">
                          
              <h2>Build your Virtual Practice For Free</h2>
              <h2>Another Tag line right here</h2>
              <h2>Another Tag line to finish off</h2>
              
            </div>
          

            <div class="row sign-up">
              <button class="btn btn-success btn-xlg">Sign Up</button>
            </div>

          </div>

        </div>

        <div class="row">
          <%= render partial: "shared/active_content_carousel", :locals => { :active_content=> @active_content, :carousel_id => 2 } %> 
        </div>

